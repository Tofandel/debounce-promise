{
	"name": "@tofandel/debounce-promise",
	"version": "5.1.9",
	"description": "Create a debounced version of a promise returning function",
	"main": "index.js",
	"files": [
		"index.js",
		"index.cjs",
		"index.d.ts",
		"index.d.cts"
	],
	"exports": {
		"require": {
			"types": "./index.d.cts",
			"default": "./index.cjs"
		},
		"default": {
			"types": "./index.d.ts",
			"default": "./index.js"
		}
	},
	"types": "index.d.ts",
	"type": "module",
	"scripts": {
		"test": "npm run build && tap && npm run lint",
		"lint": "npx @biomejs/biome lint .",
		"lint:fix": "npx @biomejs/biome lint --write --unsafe .",
		"format": "npx @biomejs/biome format --write .",
		"build": "cp index.cts index.ts && sed -i 's/module\\.exports =/export default/g' index.ts && rm -f index.d.cts index.d.ts index.cjs index.js && tsc -p tsconfig.build.json --declaration && tsc -p tsconfig.build.esm.json --declaration",
		"clean": "rimraf dist",
		"prepublishOnly": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tofandel/debounce-promise.git"
	},
	"keywords": [
		"promise",
		"batch",
		"accumulate",
		"debounce",
		"throttle",
		"ratelimit"
	],
	"author": "Bjørge Næss",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tofandel/debounce-promise/issues"
	},
	"homepage": "https://github.com/tofandel/debounce-promise",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"rimraf": "^5.0.10",
		"tap": "^21.0.1",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.14.0",
		"@types/node": "^22.9.0",
		"undici-types": "^6.20.0"
	}
}
